    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500&display=swap" rel="stylesheet">
    <title>PDF List</title>
  </head>
  
  <body>
     
    <!-----------------------------------------------------------------Navbar starts---------------------------------------------------------------- -->

  <nav class="bg-gray-800">
    <div class="max-w-8xl mx-auto px-10 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <a href="/" class="text-white font-bold text-3xl">Arista Solutions</a>
          </div>
          <div class="hidden md:block">
            <div class="ml-52 flex items-baseline">
              <a href="pdf.html" class="px-4 py-3 rounded-md text-md font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700">Upload PDF</a>
              <a href="/upload" class="ml-4 px-4 py-3 rounded-md text-md font-medium text-white bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700">View Uploads</a>
              <a href="product.html" class="ml-4 px-4 py-3 rounded-md text-md font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700">Add Products</a>
              <a href="/product" class="ml-4 px-4 py-3 rounded-md text-md font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700">View Added Products</a>
              <a href="login.html" class="ml-32 px-4 py-3 rounded-md text-md font-medium text-white hover:text-white bg-gray-600 focus:outline-none focus:text-white focus:bg-gray-700">
                Admin
              </a>              
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-----------------------------------------------------------------Navbar ends---------------------------------------------------------------- -->
    
    <div class="container mx-auto mt-44 px-5 py-5" style="border: 5px solid yellow; border-radius: 35px; width: 35%;">
    <p style="font-size: 35px; font-family: 'Oswald', sans-serif;"><u>List of PDFs uploaded into the database</u> :</p>
    <ol>
      <br>
      <% pdfs.forEach(pdf => { %>
        <li class="mb-3" style="font-family: 'Rajdhani', sans-serif; font-size: 20px; color: #009FBD;"><a href="/pdf/<%= pdf.id %>"><%= pdf.name %></a></li>
      <% }) %>
    </ol>
    </div>
  </body>
</html>
