  <!-- Logic for contact us form -->
  <div class="user" style="padding: 20px;">
  <b><h1 style="font-family: 'Kanit', sans-serif;">List of Messages</h1></b>
  <div class="user-table"  style="border-radius: 25px;">
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th>Action</th>
    </tr>
    <% contact.forEach(function(con) { %>
      <tr>
        <td><%= con.name %></td>
        <td><%= con.email %></td>
        <td><%= con.message %></td>
        <td>
          <form action="/delete3/<%= con.email %>" method="POST">
            <button class="delete-button" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
